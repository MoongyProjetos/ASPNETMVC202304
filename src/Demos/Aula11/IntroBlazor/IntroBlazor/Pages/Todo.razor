@page "/todo"
@using IntroBlazor.Data.Model;

<h3>Todo (@todos.Count(todo => !todo.EstaPronto))</h3>

<ul>
    @foreach (var todo in todos)
    {
        <li>
            <input type="checkbox" @bind="todo.EstaPronto" />
            @todo.Titulo
        </li>
    }
</ul>

<input type="text" placeholder="Something todo" @bind="newTodo" />
<button @onclick="AdicionarNovoTodo">Add todo</button>

@code {
    private List<TodoItem> todos = new();
    private string? newTodo;

    private void AdicionarNovoTodo()
    {
        todos.Add(new TodoItem { Titulo = newTodo });
        newTodo = string.Empty;
    }
}
